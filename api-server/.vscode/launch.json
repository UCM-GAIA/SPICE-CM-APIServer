    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch API Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/api-server/index.js",
            "env": {
                "NODE_DOCKER_PORT": "3000"
            }
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "API Server Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/api-server/test/apitest.js",
            "env": {
                "NODE_DOCKER_PORT": "3000"
            }
        }
    ]
}